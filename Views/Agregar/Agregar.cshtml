 *@ 
 @model List<AgregarModel>
@{
    ViewData["Title"] = "Index_Agregar";
}
<h2>Index</h2>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="form-group">
                @Html.Label("Nombre:")
                @Html.TextBox("Nombre", null, new { @class = "form-control" })
            </div>

            <div class="form-group">
                @Html.Label("Apellidos:")
                @Html.TextBox("Apellidos", null, new { @class = "form-control" })
            </div>

            <div class="form-group">
                @Html.Label("Edad:")
                @Html.TextBox("Edad", null, new { @class = "form-control" })
            </div>

            <div class="form-group">
                @Html.Label("Fecha de Nacimiento:")
                @Html.TextBox("FechaNam", null, new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.Label("Nacionalidad:")
                @Html.TextBox("Nacionalidad", null, new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.Label("Peso:")
                @Html.TextBox("Peso", null, new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.Label("Altura:")
                @Html.TextBox("Altura", null, new { @class = "form-control" })
            </div>
             <div class="form-group">
                @Html.Label("ModeloId:")
                @Html.TextBox("ModeloId", null, new { @class = "form-control" })
            </div>
            <hr />
            <button type="submit">Enviar</button>
        </form>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Apellidos)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Edad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaNam)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nacionalidad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Peso)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Altura)
            </th>
             <th>
                @Html.DisplayNameFor(model => model.ModeloId)
            </th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Apellidos)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Edad)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FechaNam)
                </td>
                 <td>
                    @Html.DisplayFor(modelItem => item.Nacionalidad)
                </td>
                 <td>
                    @Html.DisplayFor(modelItem => item.Peso)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Altura)
                </td>
                  <td>
                    @Html.DisplayFor(modelItem => item.ModeloId)
                </td>
            </tr>
        }
